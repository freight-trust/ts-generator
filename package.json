{
  "name": "ts-gen",
  "version": "0.0.1",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "ts-node ./src/cli/cli.ts ./example/ts-gen.json",
    "build": "rm -rf ./dist && tsc --outDir ./dist --sourceMap false -d",
    "format": "prettier --list-different '**/*.{ts,json,md, gql}'",
    "format:fix": "prettier --write '**/*.{ts,json,md,gql}'",
    "tslint": "tslint -p ./tsconfig.json -e 'node_modules/**/*' -e '**/node_modules/**/*' '**/*.ts'",
    "tslint:fix": "tslint --fix --format stylish -p ./tsconfig.json -e 'node_modules/**/*' -e '**/node_modules/**/*' '**/*.ts'",
    "tsc": "tsc --noEmit",
    "lint": "yarn format && yarn tslint && yarn tsc",
    "lint:fix": "yarn format:fix && yarn tslint:fix && yarn tsc",
    "test:mocha": "NODE_ENV=test mocha --require ts-node/register '**/*.spec.ts'",
    "test:mocha:coverage": "NODE_ENV=test nyc mocha --require ts-node/register '**/*.spec.ts'",
    "test": "yarn lint && yarn test:mocha",
    "test:fix": "yarn lint:fix && yarn test:mocha",
    "test:coverage": "yarn lint && yarn test:mocha:coverage",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/glob": "^5.0.35",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.0.3",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "prettier": "^1.14.2",
    "snap-shot-it": "^6.0.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.0.1",
    "typestrict": "^0.0.9"
  },
  "dependencies": {
    "glob": "^7.1.2"
  }
}
